modules = ["cpp-clang14", "swift-5.8", "c-clang14"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter", "python3"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web"

[[workflows.workflow]]
name = "Flutter Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/build/web && python3 -m http.server 5000 --bind 0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "static"
build = ["flutter", "build", "web", "--release"]
publicDir = "build/web"
